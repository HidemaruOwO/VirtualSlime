---
import { Image } from "astro:assets";
import type { BasePost } from "../interface.ts";
import { convDate } from "../lib/date";
import { importImage } from "../lib/import.ts";
import CategoryLabel from "./CategoryLabel.tsx";

import "../styles/button/material.css";

type Props = {
  post: BasePost;
  compact?: boolean;
};

const { compact, post } = Astro.props;

const date = convDate(post.frontmatter.date);
---

<div class="mt-2 w-full rounded-lg bg-white px-10 py-6 shadow-md">
  {
    !compact && (
      <Image
        src={importImage(`${post.frontmatter.cover_image}`)}
        alt="Cover Image"
        width={600}
        height={420}
        class="mb-4 rounded"
      />
    )
  }
  <div class="flex items-center justify-between">
    <span class="text-gray-600">{date}</span>
    <CategoryLabel category={post.frontmatter.category} />
  </div>

  <div class="mt-2">
    <a
      href={`/blog/${post.slug}`}
      class="text-2xl font-bold text-gray-700 hover:text-gray-700 hover:underline"
    >
      {post.frontmatter.title}
    </a>
    <p class="mt-2 text-gray-600">{post.frontmatter.excerpt}</p>
  </div>

  {
    compact && (
      <div class="mt-6 flex items-center justify-between">
        <div class="flex items-center">
          <Image
            src={importImage(`${post.frontmatter.author_image}`)}
            alt="Author Image"
            width={40}
            height={40}
            class="mx-4 hidden rounded-full object-cover sm:block"
          />
          <h3 class="font-bold text-gray-700">{post.frontmatter.author}</h3>
        </div>
      </div>
    )
  }
  <a href={`/blog/${post.slug}`} class="top-screen sticky bottom-0">
    <div class="material-button">
      <p class="material-button-text">Read More</p>
      <div class="material-button-second">
        <p class="material-button-second-text">Go!!</p>
      </div>
    </div>
  </a>
</div>
